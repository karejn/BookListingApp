<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- SearchView style. -->
    <style name="SearchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <!-- ListView style. -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/divider</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Book poster style. -->
    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <!-- Linear Layout Item style. -->
    <style name="LinearLayoutItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>

    <!-- Title TextView style. -->
    <style name="TitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:color">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Author TextView style. -->
    <style name="AuthorTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:color">@color/secondary_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- TextView style. -->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>
